root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

[*.{css,scss,less}]
indent_size = 2

[*.html]
indent_size = 2

[*.{sh,bash}]
end_of_line = lf
indent_size = 2 
